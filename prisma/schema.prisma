generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id          String   @id @default(cuid())
  text        String
  email       String?
  createdAt   DateTime @default(now())

  // Analysis object fields
  summary     String
  sentiment   String   // positive|neutral|negative
  tags        String[]
  priority    String   // P0|P1|P2|P3
  nextAction  String

  @@index([priority])
  @@index([sentiment])
  // TODO: add more indexes based on query patterns
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id          String   @id @default(cuid())
  content     String
  category    String?
  priority    String?
  tags        String[]
  status      String   @default("new")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  // TODO: add more indexes based on query patterns
}
